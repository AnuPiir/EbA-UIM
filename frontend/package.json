{
  "name": "EbAM",
  "author": "EbA team",
  "description": "This project was generated with Electron and Angular CLI version 16.2.10.",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng ../test",
    "clean-frontend-win32": "cd release-builds && rd /s /q EBAM-win32-ia32",
    "btf": "copy ..\\backend\\target\\*.jar ..\\frontend\\jars\\",
    "electron": "electron .",
    "electron-build": "ng build && electron .",
    "package-mac": "electron-packager . EBAM --overwrite --platform=darwin --arch=x64 --out=release-builds",
    "package-win": "electron-packager . EBAM --overwrite --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds",
    "package-linux": "electron-packager . EBAM --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "package-everything": "electron-packager . EBAM --platform=win32,linux,darwin --arch=x64 --out=release-builds --overwrite",
    "efm": "electron-forge make",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.12",
    "@angular/cdk": "^16.2.11",
    "@angular/common": "^16.2.12",
    "@angular/compiler": "^16.2.12",
    "@angular/core": "^16.2.12",
    "@angular/forms": "^16.2.12",
    "@angular/material": "^16.2.11",
    "@angular/platform-browser": "^16.2.12",
    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/router": "^16.2.12",
    "@electron/packager": "^18.3.6",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "bootstrap": "^5.3.1",
    "electron-log": "^5.3.2",
    "electron-packager": "^17.1.2",
    "ng": "^0.0.0",
    "ngx-bootstrap": "11.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.10",
    "@angular/cli": "~16.2.10",
    "@angular/compiler-cli": "^16.2.12",
    "@badisi/wdio-harness": "^4.1.2",
    "@electron-forge/cli": "7.7.0",
    "@electron-forge/maker-dmg": "7.7.0",
    "@electron-forge/maker-zip": "7.7.0",
    "@types/jasmine": "~4.3.0",
    "@wdio/cli": "^9.12.1",
    "@wdio/local-runner": "^9.12.1",
    "@wdio/mocha-framework": "^9.12.1",
    "@wdio/spec-reporter": "^9.11.0",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-log": "^5.3.2",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.9.4",
    "wdio-electron-service": "^8.0.2",
